@page
@model NetGit.Web.Pages.Repositories.CreateModel

    <div class="container">
        <form method="post">

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">
                    Repository Name
                </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Repository.Name">
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>

        </form>
    </div>